<% include ../shared/header %>

		<div class="main-container" >
			

			<div class="main-container-inner">
				<div class="siderbar">
				</div>

				<div class="main-content">
					<table class="table table-bordered">
						<thead>
							<tr>
								<td>User</td>
								<td>Content</td>
								<td>Date</td>
								
								<td></td>
							</tr>
						</thead>
						<tbody>
							<% for(var i=0;i<posts.length;i++){ var post = posts[i]; %>
							<tr>
								<td> <%= post.user.name %> </td>
								<td> <%= post.content %> </td>
								<td> <%= post.created_date %> </td>
								
								<td>
									<a class="btn" href="edit/<%= post.id %>">Edit </a>
									<a class="btn" href="remove/<%= post.id %>">Remove </a>
								</td>
							</tr>
							<% } %>
						</tbody>
					</table>
					<div class="panel">
						<a href="/posts/index">Add</a>
					</div>
					
				</div><!-- /.main-content -->

				
			</div><!-- /.main-container-inner -->

			
		</div><!-- /.main-container -->

		
<% include ../shared/footer %>
