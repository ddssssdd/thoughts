	
<script>
angular.module("thoughts_app").controller("LoginCtrl",function($scope,httpService){
	$scope.user =null;
	$scope.is_login = false;
	$scope.load_data = function(){
		var url ="/users/info";
		httpService(url,{},function(json){
			if (json.status){
				$scope.is_login = true;
				$scope.user = json.result;
			}else{
				$scope.is_login = false;
				$scope.user = null;
			}

			console.log(json);
		},null);
	}
	$scope.load_data();
});	
</script>

